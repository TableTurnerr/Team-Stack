<Window x:Class="CallRecorder.App.Views.SidebarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Call Recorder" 
        Height="650" Width="320"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize">
    
    <Border Background="#1A1A2E" 
            CornerRadius="12" 
            BorderBrush="#2D2D44" 
            BorderThickness="1"
            Margin="8">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.5"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Header -->
                <RowDefinition Height="Auto"/>  <!-- Warning Banner -->
                <RowDefinition Height="Auto"/>  <!-- Phone/Company -->
                <RowDefinition Height="*"/>     <!-- Form Fields -->
                <RowDefinition Height="Auto"/>  <!-- Footer -->
            </Grid.RowDefinitions>
            
            <!-- Header with drag support -->
            <Border Grid.Row="0" 
                    Background="#2D2D44" 
                    CornerRadius="12,12,0,0"
                    Padding="16,12"
                    MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <!-- Recording indicator -->
                        <Ellipse x:Name="RecordingDot" 
                                 Width="10" Height="10" 
                                 Fill="#EF4444"
                                 VerticalAlignment="Center"
                                 Margin="0,0,8,0"/>
                        <TextBlock x:Name="RecordingLabel" 
                                   Text="REC" 
                                   Foreground="#EF4444"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="TimerLabel" 
                                   Text="00:00" 
                                   Foreground="#00D4FF"
                                   FontFamily="Consolas"
                                   FontWeight="Bold"
                                   Margin="12,0,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Window controls -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="MinimizeButton"
                                Content="{materialDesign:PackIcon Kind=WindowMinimize}"
                                Style="{StaticResource MaterialDesignIconButton}"
                                Foreground="#888888"
                                Width="28" Height="28"
                                Click="MinimizeButton_Click"/>
                        <Button x:Name="CloseButton"
                                Content="{materialDesign:PackIcon Kind=Close}"
                                Style="{StaticResource MaterialDesignIconButton}"
                                Foreground="#888888"
                                Width="28" Height="28"
                                Click="CloseButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Warning Banner (for minimized window) -->
            <Border x:Name="WarningBanner" 
                    Grid.Row="1" 
                    Background="#EF4444" 
                    Padding="12,8"
                    Visibility="Collapsed">
                <TextBlock Text="⚠️ Zoom minimized - Recording blind!" 
                           Foreground="White" 
                           FontWeight="SemiBold"
                           FontSize="12"
                           TextAlignment="Center"/>
            </Border>
            
            <!-- Phone & Company Info -->
            <Border Grid.Row="2" Padding="16,12" BorderBrush="#2D2D44" BorderThickness="0,0,0,1">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Phone" 
                                                 Foreground="#3B82F6" 
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,8,0"/>
                        <TextBlock x:Name="PhoneNumberLabel" 
                                   Text="+1 (732) 701-3246" 
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <materialDesign:PackIcon Kind="Domain" 
                                                 Foreground="#888888" 
                                                 VerticalAlignment="Center"
                                                 Width="14" Height="14"
                                                 Margin="0,0,8,0"/>
                        <TextBlock x:Name="CompanyLabel" 
                                   Text="Company: Matching..." 
                                   Foreground="#888888"
                                   FontSize="12"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Form Fields (Scrollable) -->
            <ScrollViewer Grid.Row="3" 
                          VerticalScrollBarVisibility="Auto"
                          Padding="16">
                <StackPanel>
                    <!-- Audio Levels -->
                    <TextBlock Text="Audio Levels" 
                               Style="{StaticResource MutedTextStyle}" 
                               Margin="0,0,0,8"/>
                    <StackPanel Margin="0,0,0,16">
                        <Grid Margin="0,0,0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="MIC" Foreground="#888888" FontSize="10"/>
                            <Border Grid.Column="1" Background="#2D2D44" Height="8" CornerRadius="4">
                                <Border x:Name="MicLevelBar" 
                                        Background="#22C55E" 
                                        CornerRadius="4"
                                        HorizontalAlignment="Left"
                                        Width="0"/>
                            </Border>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="SYS" Foreground="#888888" FontSize="10"/>
                            <Border Grid.Column="1" Background="#2D2D44" Height="8" CornerRadius="4">
                                <Border x:Name="DesktopLevelBar" 
                                        Background="#00D4FF" 
                                        CornerRadius="4"
                                        HorizontalAlignment="Left"
                                        Width="0"/>
                            </Border>
                        </Grid>
                    </StackPanel>
                    
                    <!-- Receptionist Name -->
                    <TextBlock Text="Receptionist Name" 
                               Style="{StaticResource MutedTextStyle}" 
                               Margin="0,0,0,4"/>
                    <TextBox x:Name="ReceptionistNameInput"
                             materialDesign:HintAssist.Hint="Enter name..."
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,12"/>
                    
                    <!-- Owner Name -->
                    <TextBlock Text="Owner Name" 
                               Style="{StaticResource MutedTextStyle}" 
                               Margin="0,0,0,4"/>
                    <TextBox x:Name="OwnerNameInput"
                             materialDesign:HintAssist.Hint="Enter name..."
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,12"/>
                    
                    <!-- Callback Time -->
                    <TextBlock Text="Callback Time" 
                               Style="{StaticResource MutedTextStyle}" 
                               Margin="0,0,0,4"/>
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <DatePicker x:Name="CallbackDatePicker"
                                    Style="{StaticResource MaterialDesignOutlinedDatePicker}"/>
                        <materialDesign:TimePicker x:Name="CallbackTimePicker"
                                                   Grid.Column="2"
                                                   Style="{StaticResource MaterialDesignOutlinedTimePicker}"
                                                   Is24Hours="False"/>
                    </Grid>
                    
                    <!-- Call Outcome -->
                    <TextBlock Text="Call Outcome" 
                               Style="{StaticResource MutedTextStyle}" 
                               Margin="0,0,0,4"/>
                    <ComboBox x:Name="OutcomeComboBox"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              Margin="0,0,0,12">
                        <ComboBoxItem Content="Select outcome..."/>
                        <ComboBoxItem Content="Interested"/>
                        <ComboBoxItem Content="Not Interested"/>
                        <ComboBoxItem Content="Callback"/>
                        <ComboBoxItem Content="No Answer"/>
                        <ComboBoxItem Content="Wrong Number"/>
                        <ComboBoxItem Content="Other"/>
                    </ComboBox>
                    
                    <!-- Interest Level -->
                    <TextBlock Text="Interest Level" 
                               Style="{StaticResource MutedTextStyle}" 
                               Margin="0,0,0,4"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <Slider x:Name="InterestSlider"
                                Minimum="1" Maximum="10" 
                                Value="5"
                                Width="200"
                                TickFrequency="1"
                                IsSnapToTickEnabled="True"
                                Style="{StaticResource MaterialDesignDiscreteSlider}"/>
                        <TextBlock x:Name="InterestValueLabel" 
                                   Text="5" 
                                   Foreground="White"
                                   FontWeight="Bold"
                                   Margin="12,0,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Notes -->
                    <TextBlock Text="Notes" 
                               Style="{StaticResource MutedTextStyle}" 
                               Margin="0,0,0,4"/>
                    <TextBox x:Name="NotesInput"
                             materialDesign:HintAssist.Hint="Add notes..."
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Height="80"
                             VerticalContentAlignment="Top"/>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Footer -->
            <Border Grid.Row="4" 
                    Background="#2D2D44" 
                    CornerRadius="0,0,12,12"
                    Padding="16,12">
                <StackPanel>
                    <!-- Countdown (shown after call ends) -->
                    <Border x:Name="CountdownBanner" 
                            Background="#F59E0B" 
                            CornerRadius="6"
                            Padding="8"
                            Margin="0,0,0,8"
                            Visibility="Collapsed">
                        <TextBlock x:Name="CountdownLabel" 
                                   Text="Call ended - Saving in 10s..." 
                                   Foreground="White"
                                   FontWeight="SemiBold"
                                   TextAlignment="Center"/>
                    </Border>
                    
                    <!-- Save Button -->
                    <Button x:Name="SaveButton"
                            Content="Save &amp; Close"
                            Style="{StaticResource AccentButtonStyle}"
                            Click="SaveButton_Click"
                            HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
